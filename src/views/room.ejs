<!DOCTYPE html>

<head>
  <title>Roquet.Q - Perguntas e Respostas</title>
  <meta charset="UTF-08">
  <meta http-equiv="X-UA-Compatible" content="IE-Edge">

  <!-- View Port -->
  <meta name="viewport" content="width=device-width" , initial-scale="1.0">

  <!-- CSS -->
  <link rel="stylesheet" href="/styles/room.css">
  <link rel="stylesheet" href="/styles/global.css">
  <link rel="stylesheet" href="/styles/modal.css">

  <!-- FONTS -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Poppins:wght@400;500;700&display=swap"
    rel="stylesheet">

  <!-- SCRIPTS -->
  <script src="/scripts/main.js" defer type="module"></script>


</head>

<body>
  <div id="room" class="content">
    <header>
      <a href="/">
        <img src="/images/logo.svg" alt="Roquet.Q Logo" />
      </a>
      <div class="buttons">
        <div class="button outlined" id="room-id" data-id="<%= roomId %>">
          #<%= roomId %>
            <img src="/images/copy.svg" alt="Copiar número da sala">
        </div>
        <a class="button" href="#">
          <img src="/images/users-white.svg" alt="Criar nova sala">
          Criar Sala
        </a>
      </div>
    </header>

    <main>
      <section id="question-form">
        <h2>Faça sua pergunta</h2>
        <form action="/question/create/<%= roomId %>" method="POST">
          <label class="sr-only" for="question">O que você quer perguntar?</label>
          <textarea name="question" id="question" placeholder="O que você quer perguntar?"></textarea>

          <footer>
            <div>
              <img src="" alt="">
              <img src="/images/lock.svg" alt="cadeado">
              Esta pergunta é anônima
            </div>
            <button>Enviar</button>
          </footer>
        </form>
      </section>

      <section id="questions">
        <h2 class="sr-only">Perguntas da Comunidade</h2>

        <div class="quetions">

          <% questions.forEach(questions=> { %>

            <div class="question-wrapper">
              <div class="question-content">
                <div class="user">
                  <img src="/images/user.svg" alt="Avatar">
                </div>
                <div class="question">
                  <p>
                    <%= questions.title %>
                  </p>
                </div>
              </div>
              <div class="actions">
                <a href="#" class="check" data-id="2">
                  <img src="/images/check.svg" alt="Check">
                  Marcar como lida
                </a>
                <a href="#" class="delete" data-id="2">
                  <img src="/images/thrash.svg" alt="Trash">
                  Excluir
                </a>
              </div>
            </div>

            <% }); %>

              <div class="question-wrapper read">
                <div class="question-content">
                  <div class="user">
                    <img src="/images/user.svg" alt="Avatar">
                  </div>
                  <div class="question">
                    <p>Qual a diferença entre const, var e let no javascript</p>
                  </div>
                </div>
                <div class="actions">
                  <a href="#" class="delete" data-id="1">
                    <img src="/images/thrash.svg" alt="Trash">
                    Excluir
                  </a>
                </div>
              </div>

        </div>

      </section>

    </main>

  </div>

  <!-- MODAL -->

  <div class="modal-wrapper">
    <div class="modal">
      <h2>Excluir pergunta</h2>
      <p>Tem certeza que você deseja excluir essa pergunta?</p>

      <form action="#" method="post">
        <label for-id="password" class="sr-only">Digite sua senha admin</label>
        <input type="password" name="password" id="password" placeholder="Senha">

        <div class="buttons">
          <div class="button grey cancel">Cancelar</div>
          <button class="red">Sim, excluir</button>
        </div>
      </form>
    </div>
  </div>

</body>